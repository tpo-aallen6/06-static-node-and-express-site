extends layout.pug

block content

  article.portfolio-intro
    h1 Adam Allen's Portfolio
    p This portfolio is meant to demonstrate the vast array of skills I've developed over the course of this bootcamp. 

  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt="image of a project")
            h5 #{project.project_name}
