extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project_name

        p= description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in technologies
            li= technology
          
        a.btn-link(href=`${live_link}`) Live Demo
        a.btn-link(href=`${github_link}`) GitHub Repo

    .project-img-box.box
      img.project-img(src=`/static/images/${image_urls[1]}`, alt='picture of project')
      img.project-img(src=`/static/images/${image_urls[2]}`, alt='picture of project')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
